<% 
    // search album
    const {
        items: searchTrackItems,
        limit,
        page
    } = locals.searchTrack;
%>

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layouts/head', {title: `Search | Spotify` }) %>

</head>

<body>

    <!--
      - #RECENTLY PLAYED
    -->

    <%- include("../layouts/recent-played", { recentlyPlayed: locals.recentlyPlayedTracks }) %>


    <article class="page custom-scrollbar" data-page>

    <!--
       - TOP APP BAR
     -->
        <%- include("../partials/top-bar", locals.currentProfile) %>

    <!--
      - BOTTOM NAV
     -->
        <%- include("../partials/bottom-nav") %>


        <!--
            - SEARCH FILTER LIST
        -->

        <%- include('../partials/search-filter', {
            type: locals.type
        }) %>

        <div class="main" data-main>

            <section class="section">

                <div class="list">
                    <% searchTrackItems.forEach(({album: {images, name: albumName}, artists, duration_ms, id, name: title, uri: trackUri}, index)=> { %>

                        <% 
                        const text = artists.map(({name}) => name).join(', '); 
                        index = (index + 1) + (limit * (page - 1))
                        %>

                        <%- include('../partials/list-item', {
                            title,
                            images,
                            text,
                            duration_ms,
                            id,
                            trackNumber: index,
                            albumName,
                            trackUri
                        }) %>
                    <% }) %>
                </div>

                <!-- PAGINATION -->
                <%- include('../partials/pagination', locals.searchTrack) %>
            </section>
        </div>

    <!--
        - #PLAYER SM
    -->

    <%- include('../partials/player-sm') %>


    <!--
        - #PLAYER LG
    -->

        <%- include('../partials/player-lg') %>

    <!--
      - #FOOTER
    -->

        <%- include('../layouts/footer') %>
    </article>
</body>

</html>