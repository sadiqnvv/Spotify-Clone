<% 
    // search album
    const {
        items: searchPlaylistItems
    } = locals.searchPlaylist;
%>

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layouts/head', {title: `Search | Spotify` }) %>

</head>

<body>

    <!--
      - #RECENTLY PLAYED
    -->

    <%- include("../layouts/recent-played", { recentlyPlayed: locals.recentlyPlayedTracks }) %>


    <article class="page custom-scrollbar" data-page>

    <!--
       - TOP APP BAR
     -->
        <%- include("../partials/top-bar", locals.currentProfile) %>

    <!--
      - BOTTOM NAV
     -->
        <%- include("../partials/bottom-nav") %>


        <!--
            - SEARCH FILTER LIST
        -->

        <%- include('../partials/search-filter', {
            type: locals.type
        }) %>

        <div class="main" data-main>

            <section class="section">

                <div class="grid-list">
                    <% searchPlaylistItems.forEach(({id, images, name: title, owner, uri}) => { %>
                        <% 
                            const text = `By ${owner.display_name}`;
                            const [image] = images || []; 
                        %>
                            <%- include('../partials/card', {
                                image,
                                type: 'playlist',
                                title,
                                text,
                                link: `/playlist/${id}`,
                                uri
                            }) %>
                    <% }) %>
                </div>

                <!-- PAGINATION -->
                <%- include('../partials/pagination', locals.searchPlaylist) %>
            </section>
        </div>

    <!--
        - #PLAYER SM
    -->

    <%- include('../partials/player-sm') %>


    <!--
        - #PLAYER LG
    -->

        <%- include('../partials/player-lg') %>

    <!--
      - #FOOTER
    -->

        <%- include('../layouts/footer') %>
    </article>
</body>

</html>