<% 
    // user top tracks

    const {
        items: trackItems,
        limit,
        page
    } = locals.tracks
%>

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layouts/head', {title: `${locals.title} | Spotify` }) %>

    <link rel="stylesheet" href="/css/explore.css">
</head>

<body>

    <!--
      - #RECENTLY PLAYED
    -->

    <%- include("../layouts/recent-played", { recentlyPlayed: locals.recentlyPlayedTracks }) %>


    <article class="page custom-scrollbar" data-page>

    <!--
       - TOP APP BAR
     -->
        <%- include("../partials/top-bar", locals.currentProfile) %>

    <!--
      - BOTTOM NAV
     -->
        <%- include("../partials/bottom-nav") %>
        <div class="main" data-main>
            <section class="section">
                <div class="title-wrapper">
                    <h2 class="title-large section-title"><%= locals.title %></h2>
                </div>
    
                <div class="list">
                    <% trackItems.forEach(({album: {images, name: albumName}, artists, name, duration_ms, id, uri: trackUri}, index) => { %>

                        <% 
                            const text = artists.map(({name}) => name).join(', ');
                            index = (index + 1) + (limit * (page - 1));
                        %>

                        <%- include('../partials/list-item', {
                            title: name,
                            images,
                            text,
                            duration_ms,
                            id,
                            trackNumber: index,
                            albumName,
                            trackUri
                        }) %>
                    <% }) %>
                </div>
                <!--   
                    - #PAGINATION   
                -->
                <%- include("../partials/pagination", locals.tracks) %>
            </section>
        </div>
    <!--
        - #PLAYER SM
    -->
    <%- include('../partials/player-sm') %>
    <!--
        - #PLAYER LG
    -->
        <%- include('../partials/player-lg') %>
    <!--
      - #FOOTER
    -->
        <%- include('../layouts/footer') %>
    </article>
</body>

</html>