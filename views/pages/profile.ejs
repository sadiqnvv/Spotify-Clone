<% 

    // current user profile
    const {
        display_name: profileName,
        images: profileImages,
        followers: {total: totalProfileFollowers}
    } = locals.currentProfile
    
    // user top artist
    const {
        total: userTotalTopArtist,
        next: userTopArtistsNext,
        items: userTopArtistItmes
    } = locals.userTopArtist

    // user top tracks
    const {
        total: userTotalTopTracks,
        next: userTopTracksNext,
        items: userTopTracksItmes
    } = locals.userTopTracks


    // user followed artist
    const {
        total: userTotalFollowedArtist,
        next: userFollowedArtistNext,
        items: userFollowedArtistItmes
    } = locals.userFollowedArtist
%>

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layouts/head', {title: `${profileName} | Spotify` }) %>

    <style>
        .detail-header { align-items: center;}
        .detail-banner { border-radius: var(--radius-full);}
    </style>
</head>

<body>

    <!--
      - #RECENTLY PLAYED
    -->

    <%- include("../layouts/recent-played", {
        recentlyPlayed: locals.recentlyPlayedTracks
    }) %>


    <article class="page custom-scrollbar" data-page>

    <!--
       - TOP APP BAR
    -->
    <%- include("../partials/top-bar", locals.currentProfile) %>

    <!--
      - BOTTOM NAV
    -->
    <%- include("../partials/bottom-nav") %>

    <div class="main" data-main>

        <!--    
            - PROFILE
        -->
        <section class="detail-header">

            <figure class="img-holder detail-banner">

                <% 
                const {
                    url = "/images/artist-banner.png",
                    width = 300,
                    height = 300
                } = profileImages[1] || {}
                %>

                <img src="<%= url %>" alt="<%= profileName %>" width="<%= width %>" height="<%= height %>" class="img-cover" data-image-load-anim>
            </figure>

            <div class="detail-content">
                <p class="label-large detail-subtitle">Profile</p>

                <h2 class="headline-large detail-title">
                    <%= profileName %>
                </h2>
                <div class="detail-text has-separator">

                    <p class="label-large">
                        <%= totalProfileFollowers %> Followers
                    </p>
                    <span class="separator"></span>
                    <p class="label-large">
                        <%= userTotalFollowedArtist %> Following
                    </p>
                     

                </div>
            </div>
        </section>
        <div class="divider variant"></div>

        <!--
            - TOP ARTIST
        -->
        <% if (userTotalTopArtist) { %>
            <section class="section">
                <div class="title-wrapper">
                    <h2 class="title-large section-title">Top artists</h2>

                    <% if(userTopArtistsNext !== null) {%>
                        <a href="/me/top/artist" class="btn btn-link" data-ripple>
                            <span class="label-large">See all</span>
                            <div class="state-layer"></div>
                        </a>
                    <% } %>
                </div>
                <div class="slider" data-slider>
                    <div class="slider-inner">
                        <!--
                            - If you're new spotify user, then you may not see the top artist. 
                        -->
                        <% userTopArtistItmes.forEach(({ name, type, images, id, uri }) => { %>

                            <% const [image] = images || [] %>

                            <%- include('../partials/card', {
                                variant: 'artist-card',
                                title: name,
                                image,
                                type: 'artist',
                                text: type,
                                link: `/artist/${id}` ,
                                uri }) %>
                        <% }) %>
                    </div>
                </div>
            </section>
        <% } %>

        <!--
            - TOP TRACKS
        -->
        <% if (userTotalTopTracks) { %>
            <section class="section">
                <div class="title-wrapper">
                    <h2 class="title-large section-title">Top tracks</h2>

                    <% if(userTopTracksNext !== null) {%>
                        <a href="/me/top/track" class="btn btn-link" data-ripple>
                            <span class="label-large">See all</span>
                            <div class="state-layer"></div>
                        </a>
                    <% } %>
                </div>
                
                <div class="list">

                    <% userTopTracksItmes.forEach(({album: {images, name: albumName}, artists, name, duration_ms, id, uri: trackUri}, index) => { %>

                        <% 
                        const text = artists.map(({name}) => name).join(', ');
                        index++;
                        %>

                        <%- include('../partials/list-item', {
                            title: name, 
                            images,
                            text, 
                            duration_ms, 
                            id,
                            trackNumber: index,
                            albumName,
                            trackUri
                        }) %>
                    <% }) %>
                </div>
            </section>
        <% } %>

        <!--
            - FOLLOWED ARTIST
        -->
        <% if (userTotalFollowedArtist) { %>
            <section class="section">
                <div class="title-wrapper">
                    <h2 class="title-large section-title">Following</h2>

                    <% if(userFollowedArtistNext !== null) {%>
                        <a href="/me/following" class="btn btn-link" data-ripple>
                            <span class="label-large">See all</span>
                            <div class="state-layer"></div>
                        </a>
                    <% } %>
                </div>
                
                <div class="slider" data-slider>
                    <div class="slider-inner">
                        <% userFollowedArtistItmes.forEach(({ name, type, images, id, uri }) => { %>

                            <% const [image] = images || [] %>

                            <%- include('../partials/card', {
                                variant: 'artist-card',
                                title: name,
                                image,
                                type: 'artist',
                                text: type,
                                link: `/artist/${id}` ,
                                uri }) %>
                        <% }) %>
                    </div>
                </div>
            </section>
        <% } %>
    </div>

    <!--
        - #PLAYER SM
    -->
    <%- include('../partials/player-sm') %>


    <!--
        - #PLAYER LG
    -->
    <%- include('../partials/player-lg') %>

    <!--
      - #FOOTER
    -->
    <%- include('../layouts/footer') %>

    </article>
</body>

</html>