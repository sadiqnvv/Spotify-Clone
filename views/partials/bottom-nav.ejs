<% const navItems = [ 
{ href: "/", icon: "home", text: "Home" }, 
{ href: "/explore", icon: "explore", text: "Explore" },
{ href: "/album", icon: "album", text: "Album" },
{ href: "/playlist", icon: "queue music", text: "Playlists" } ] %>

<nav class="bottom-nav">
  <a href="/" class="logo bottom-nav-item">
    <div class="icon-wrapper">
      <img
        src="/images/favicon.svg"
        width="24"
        height="24"
        alt="Spotify logo"
        class="small"
      />

      <img
        src="/images/logo.png"
        width="94"
        height="24"
        alt="Spotify logo"
        class="large"
      />
    </div>

    <p class="bottom-nav-text label-medium">Spotify</p>
  </a>

    <% navItems.forEach(({href, icon, text}) => { %> 
        <a href="<%= href %>" class="bottom-nav-item   <%= locals.currentRoute === href ? "active" : "" %>" data-bottom-nav-item>
            <div class="icon-wrapper">
                <span class="material-symbols-rounded icon">
                    <%= icon  %>
                </span>

                <div class="indicator"></div>
                <div class="state-layer"></div>

                
            </div>
            <p class="bottom-nav-text label-medium"><%= text %></p>

        </a>
    <% }) %>
</nav>
